@model lmgtweb.Book.Models.BooksListViewModel

<div class="modal" id="id_bookslist_userlend_modal">
    <div class="modal-background">
        <div class="modal-content">

            <div class="panel">
                <p class="panel-heading">
                    Books List
                </p>
                <div class="panel-block">
                    <div class="columns">
                        <div class="column">

                            <div class="field">
                                <div class="control">
                                    <div class="select">
                                        <select id="id_bookslist_users">
                                            <option value="0">Select Publisher</option>
                                            @{
                                                foreach(var ur in Model.Users)
                                                {
                                                    <option value="@(ur.ID)">@(ur.Name)</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <button id="id_bookslist_lendbook" class="button is-info">Lend</button>
                            <button id="id_bookslist_userlend_close_modal" class="button is-danger">Close</button>
                            
                        </div>
                    </div>
                </div>
            </div>        

        </div>
    </div>
</div>


<div class="container" style="margin: auto 30% auto 10%;">
    <div class="panel">
        <p class="panel-heading">
            Books List
        </p>

        <div class="panel-block">
            <div class="columns">
                <div class="column">
                    <table class="table is-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Author</th>
                                <th>Publisher</th>
                                <th>IsLend</th>
                                <th>Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @{
                                foreach(var book in Model.Books)
                                {
                                    <tr data-mybookid="@(book.ID)">
                                        <td>@(book.ID)</td>
                                        <td>@(book.Name)</td>
                                        <td>@(book.CategoryName)</td>
                                        <td>@(book.AuthorName)</td>
                                        <td>@(book.PublisherName)</td>
                                        <td>@(book.IsLend ? "Yes" : "No")</td>

                                        <td>
                                            <button class="button is-info id_bookslist_edit">Edit</button>
                                            @{
                                                if(book.IsLend)
                                                {
                                                    <button class="button is-info id_bookslist_revoke">Revoke</button>
                                                }
                                                else
                                                {
                                                    <button class="button is-info id_bookslist_lend">Lend</button>
                                                }
                                            }
                                            
                                            <button class="button is-danger id_bookslist_delete">Delete</button>
                                        </td>

                                    </tr>
                                }
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>

    </div>
</div>